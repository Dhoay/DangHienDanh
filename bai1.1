#include <iostream>
using namespace std;

int binarySearch(int arr[], int size, int x) {
    int l = 0, r = size - 1;
    while (l <= r) {
        int mid = l + (r - l) / 2;
        if (arr[mid] == x) {
            return mid;
        } else if (arr[mid] < x) {
            l = mid + 1;
        } else {
            r = mid - 1;
        }
    }
    return -1;
}

int main() {
    const int size = 5;
    int arr[size];
    cout << "Nhap " << size << " phan tu vao mang: " << endl;
    for (int i = 0; i < size; i++) {
        cin >> arr[i];
    }
    int x = 10;
    int result = binarySearch(arr, size, x);
    if (result == -1) {
        cout << "Khong tim thay gia tri " << x << " trong mang." << endl;
    } else {
        cout << "Tim thay gia tri " << x << " tai chi so " << result << " trong mang." << endl;
    }
    return 0;
}
